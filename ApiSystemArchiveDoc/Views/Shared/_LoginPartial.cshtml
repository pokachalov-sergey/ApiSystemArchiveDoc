@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering

@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("LogOff", "Account", new {}, FormMethod.Post,
        true,
        new {id = "logoutForm"}))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav navbar-right">
            <li class="nav-item">
              <div class = "nav-link"> @User.Identity.Name</div>
                    
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
            </li>
        </ul>
    }
}
else
{

    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            @Html.ActionLink("Выполнить вход", "Login", "Account",
                routeValues: new {}, htmlAttributes: new {@class = "nav-link", id = "loginLink"})
        </li>
    </ul>
}